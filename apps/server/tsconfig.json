{
	"compilerOptions": {
		"target": "ESNext",
		"module": "CommonJS",
		"esModuleInterop": true,
		"moduleResolution": "node",
		"forceConsistentCasingInFileNames": true,
		"verbatimModuleSyntax": false,
		"strict": true,
		"skipLibCheck": true,
		"baseUrl": "./",
		"paths": {
		  "@/*": ["./src/*"]
		},
		"outDir": "./dist",
		"types": [
        "node", "jest"
    ],
		"jsx": "react-jsx"
	},
	"tsc-alias": {
		"resolveFullPaths": true
	}
}
